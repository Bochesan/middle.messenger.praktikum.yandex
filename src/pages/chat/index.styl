@import '../../styles/helpers/index.styl'
.chat-dialog
  display grid
  grid-template-columns set-rem(320px) 1fr

  height 100vh

.chat-aside
  display grid

  height 100vh

  border-right 1px solid #000000
  background $bg-cultured
  grid-template-rows auto 1fr auto

  &__main
    display flex
    overflow auto
    align-items flex-start
    flex-direction column

    padding set-rem(16px) 0
    grid-row-gap set-rem(8px)
    grid-template-rows max-content

  &__header
    display flex

    border-bottom 1px solid #000000
    background $bg-cultured

.chat-main
  display flex

  background $bg-white
