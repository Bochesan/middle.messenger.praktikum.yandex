@import '../../styles/helpers/index.styl'
.profile-dialog
  display grid
  gap set-rem(32px)

.profile-form
  display grid
  grid-row-gap set-rem(32px)

.profile-header
  display flex
  align-items center
  flex-direction column

  &__avatar
    margin-bottom set-rem(16px)

  &__name
    set-font(16px, 600)
    color $color-black

.profile-main
  display grid
  gap set-rem(12px)

.profile-footer
  display grid
  gap set-rem(8px)
