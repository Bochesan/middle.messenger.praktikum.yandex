@import '../../../styles/helpers/index.styl'
.chat-layout
  display flex
  flex-direction column

  width 100%
  height 100%

  background $bg-white

  &__body
    display flex
    flex-direction column

    width 100%
    height 100%
    padding 0 set-rem(16px)

  &__header
    display flex
    align-items center
    flex none
    justify-content space-between

    min-height set-rem(80px)
    padding set-rem(4px) 0

    border-bottom 1px solid $spanish-gray

  &__main
    flex 1 1

    padding set-rem(16px) 0

  &__footer
    flex none

  &__empty
    set-font(18px)
    margin auto
