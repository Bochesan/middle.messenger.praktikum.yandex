@import '../../../styles/helpers/index.styl'
.chat-item
  display flex

  width 100%
  height set-rem(72px)
  padding-top set-rem(8px)

  cursor pointer
  transition background 0.3s
  gap set-rem(16px)

  &:hover
    background rgba($bg-ultramarine-blue, 0.4)

  &__avatar
    padding-bottom set-rem(8px)
    padding-left set-rem(8px)

  &__main
    display flex
    flex 1 1

    padding-right set-rem(8px)
    padding-bottom set-rem(8px)

    border-bottom 1px solid rgba(0,0,0,0.1)

  &__note
    flex 1 1

  &__title
    set-font(16px, 600, 1)
    margin-bottom set-rem(4px)

    color $color-black

  &__subtitle
    set-font(12px)
    color $color-black

  &__info
    display flex
    flex none
    flex-direction column
    justify-content space-between

    height 100%

  &__date
    set-font(12px)
    color rgba($color-black, 0.6)

  &__count
    set-font(10px, 400, 1)
    align-self flex-end
    flex none

    min-width set-rem(16px)
    height set-rem(16px)
    padding set-rem(4px)

    text-align center

    color $color-white
    border-radius 32px
    background $bg-black
