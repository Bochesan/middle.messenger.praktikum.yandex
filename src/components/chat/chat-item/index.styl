@import '../../../styles/helpers/index.styl';
.chat-item
	display: flex;
	width: 100%;
	height: set-rem(72px);
	gap: set-rem(16px);
	padding-top: set-rem(8px);
	transition: background 0.3s;
	cursor: pointer;

	&:hover
		background: rgba($bg-ultramarine-blue, 0.4);

	&__avatar
		padding-bottom: set-rem(8px);
		padding-left: set-rem(8px);

	&__main
		flex: 1 1;
		display: flex;
		padding-bottom: set-rem(8px);
		padding-right: set-rem(8px);
		border-bottom: 1px solid rgba(0,0,0,0.1);

	&__note
		flex: 1 1;

	&__title
		set-font(16px, 600, 1);
		color: $color-black;
		margin-bottom: set-rem(4px);

	&__subtitle
		set-font(12px);
		color: $color-black;

	&__info
		flex: none;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		height: 100%;

	&__date
		set-font(12px);
		color: rgba($color-black, 0.6);

	&__count
		flex: none;
		set-font(10px, 400, 1);
		border-radius: 32px;
		background: $bg-black;
		color: $color-white;
		padding: set-rem(4px);
		align-self: flex-end;
		height: set-rem(16px);
		min-width: set-rem(16px);
		text-align: center;
