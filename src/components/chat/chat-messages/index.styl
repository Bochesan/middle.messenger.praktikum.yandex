@import '../../../styles/helpers/index.styl'
.chat-messages
  display flex
  flex none

  width 100%
  height calc(100vh - 200px)

  &__empty
    margin auto

  &__messages
    display flex
    overflow auto
    align-items flex-start
    flex-direction column-reverse

    width 100%
    height 100%
    grid-gap set-rem(16px)

.message
  display flex
  flex-direction column

  max-width 60%
  padding set-rem(12px) set-rem(14px)

  border-radius 0 set-rem(8px) set-rem(8px)
  background rgba(#3369f3, 0.3)
  grid-gap set-rem(4px)

  &--self
    align-self flex-end

    border-radius set-rem(8px) set-rem(8px) 0
    background rgba(#f5f5f599, 0.8)

  &__user
    font-size set-rem(12px)
    font-weight bold
    line-height 1

  &__content
    font-size set-rem(16px)

  &__time
    font-size set-rem(10px)
    line-height 1

    align-self flex-end

