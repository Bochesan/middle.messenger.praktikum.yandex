@import '../../styles/helpers/index.styl'
.button
  set-font(18px, 400, 1)
  display inline-block

  padding set-rem(8px) set-rem(16px)

  cursor pointer
  transition 0.3s
  text-align center

  color $color-black
  border 1px solid #000000
  border-radius set-rem(2px)
  outline none
  background #ffffff

  &--link
    text-decoration none

  &:hover
    opacity 0.4

  &:active
    opacity 0.6

  &[disabled]
    cursor default

    opacity 0.2
    color inherit
