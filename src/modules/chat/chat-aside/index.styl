@import '../../../styles/helpers/index.styl';
.chat-aside
	display: grid;
	grid-template-rows: auto 1fr auto;
	background: $bg-cultured;
	border-right: 1px solid #000000;
	height: 100vh;

	&__search
		background: $bg-cultured;
		padding: set-rem(16px);
		border-bottom: 1px solid #000000;

	&__search-input
		outline: none;
		border: 1px solid rgba(0,0,0,0.8);
		background: $bg-white;
		text-align: center;
		border-radius: 8px;
		height: set-rem(32px);
		width: 100%;
		set-font(16px, 400, 1);

		&::paceholder
			color: rgba(0,0,0,0.4);

	&__main
		display: grid;
		grid-row-gap: set-rem(8px);
		grid-template-rows: max-content;
		align-items: flex-start;
		overflow: auto;
		padding: set-rem(16px) 0;

	&__footer
		background: $bg-cultured;
		border-top: 1px solid #000000;

	&__settings
		background: $bg-cultured;
		cursor: pointer;
		transition: background 0.3s;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: set-rem(4px);
		padding: set-rem(8px);
		text-decoration: none;

		&:hover
			background: darken($bg-cultured,10deg);

	&__settings-icon
		width: set-rem(24px);
		height: set-rem(24px);

	&__settings-title
		set-font(16px, 500);
		color: $color-black;
